{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",
    "lib": [
      "ES2021"
    ],
    /* Modules */
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "rootDir": "./src",
    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,
    /* Emit */
    "outDir": "./dist",
    "sourceMap": false,
    "removeComments": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}